{{> message}}

<style>
    .p-right {
        display: flex;
        justify-content: flex-end;
    }
</style>


<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="p-right">
                <a class="btn btn-success my-2" href="/signup-cola">Colaborador</a>
            </div>
            <div class="card text-center">
                <div class="card-header m-3">
                    <h3 style="color: #012E40;">LOGIN</h3>
                </div>
                <div class="card-body">
                    <img src="/img/logo.png" class="card-img-top mx-auto m-2 rounded-circle w-50 mb-4" alt="logo">
                    <form action="/signin" method="POST">
                        <div class="form-group mt-2">
                            <input type="text" name="cedula" placeholder="Nro. Cedula" class="form-control">
                        </div>
                        <div class="form-group mt-2">
                            <input type="password" name="password" placeholder="Password" class="form-control">
                        </div>

                        <div class="form-group mt-2">
                            <button class="btn btn-block text-light mt-3" style="background-color: #012E40;">
                                Ingresar
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>